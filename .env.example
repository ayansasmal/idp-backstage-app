# IDP Backstage App Environment Configuration
# Copy this file to .env and update with your actual values

# Core Application Configuration
APP_BASE_URL=http://localhost:3000
ORGANIZATION_NAME=IDP Platform Team
BACKEND_SECRET=your-secure-backend-secret-at-least-32-chars
BACKEND_BASE_URL=http://localhost:7007
PORT=7007
HOST=0.0.0.0

# Database Configuration (AWS RDS)
POSTGRES_HOST=your-rds-host.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_USER=backstage
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=backstage

# GitHub Integration & OAuth2 (REQUIRED for OAuth setup)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_APP_ID=your-github-app-id
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
GITHUB_PRIVATE_KEY=your-github-app-private-key
GITHUB_ORG=your-github-organization
GITHUB_DEFAULT_BRANCH=main
GITHUB_SYNC_FREQUENCY=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
TECHDOCS_S3_BUCKET=idp-backstage-techdocs

# ArgoCD Configuration
ARGOCD_SERVER_URL=https://argocd.idp-platform.local
ARGOCD_USERNAME=admin
ARGOCD_PASSWORD=your-argocd-password
ARGOCD_AUTH_TOKEN=your-argocd-auth-token
ARGOCD_STAGING_SERVER_URL=https://argocd-staging.idp-platform.local
ARGOCD_STAGING_AUTH_TOKEN=your-argocd-staging-auth-token

# Argo Workflows Configuration
ARGO_WORKFLOWS_SERVER_URL=https://argo-workflows.idp-platform.local
ARGO_WORKFLOWS_AUTH_TOKEN=your-argo-workflows-auth-token
ARGO_WORKFLOWS_NAMESPACE=argo
ARGO_WORKFLOWS_STAGING_SERVER_URL=https://argo-workflows-staging.idp-platform.local
ARGO_WORKFLOWS_STAGING_AUTH_TOKEN=your-argo-workflows-staging-auth-token
ARGO_WORKFLOWS_STAGING_NAMESPACE=argo-staging

# Monitoring & Observability
GRAFANA_DOMAIN=grafana.idp-platform.local
GRAFANA_URL=https://grafana.idp-platform.local
GRAFANA_API_KEY=your-grafana-api-key
PROMETHEUS_URL=https://prometheus.idp-platform.local
PROMETHEUS_API_KEY=your-prometheus-api-key
JAEGER_URL=https://jaeger.idp-platform.local
KIALI_URL=https://kiali.idp-platform.local
KIALI_SERVICE_ACCOUNT_TOKEN=your-kiali-service-account-token
LIGHTHOUSE_URL=https://lighthouse.idp-platform.local

# Unleash Feature Flags
UNLEASH_URL=https://unleash.idp-platform.local
UNLEASH_API_TOKEN=your-unleash-api-token
UNLEASH_CLIENT_KEY=your-unleash-client-key
UNLEASH_ENVIRONMENT=production

# Quality Tools
SONARQUBE_URL=https://sonarqube.idp-platform.local
SONARQUBE_API_KEY=your-sonarqube-api-key
SNYK_TOKEN=your-snyk-token
SNYK_ORG_ID=your-snyk-org-id

# Cost Management
ENGINEER_COST_PER_HOUR=200

# Kubernetes Configuration
KUBERNETES_CLUSTER_URL=https://kubernetes.idp-platform.local
KUBERNETES_CLUSTER_NAME=idp-cluster
KUBERNETES_SKIP_TLS_VERIFY=false
KUBERNETES_SERVICE_ACCOUNT_TOKEN=your-kubernetes-service-account-token
KUBERNETES_CA_FILE=path-to-ca-file

# Email Configuration
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# JIRA Integration
JIRA_HOST=jira.company.com
JIRA_TOKEN=your-jira-token

# Scaffolder Configuration
SCAFFOLDER_DEFAULT_AUTHOR_NAME=IDP Platform
SCAFFOLDER_DEFAULT_AUTHOR_EMAIL=platform@company.com